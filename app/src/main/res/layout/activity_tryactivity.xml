<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tryactivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp">
                <TextView
                    android:id="@+id/te"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Precautions and Measures you can take while in this crucial period"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <GridLayout

                    android:id="@+id/gridLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/te">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1mask_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle">

                        <RelativeLayout
                            android:id="@+id/cv1_tips"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_mask_cv1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/maskpic"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_mask_cv1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/img_mask_cv1"
                                android:padding="15dp"
                                android:text="When to wear a mask?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv2_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"

                        android:background="@drawable/greycircle">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/symptoms_pic"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/img_cv2"
                                android:padding="15dp"
                                android:text="What are the symptoms?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv3"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle">

                        <RelativeLayout
                            android:id="@+id/cv3_tips"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/virus_pic"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/img_cv3"
                                android:padding="15dp"
                                android:text="What are Cronavirusses?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv4_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle" >

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv4"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/alcohal_clean"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/img_cv4"
                                android:padding="15dp"
                                android:text="How to prevent it?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv5_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle" >

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv5"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/sneezing"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/img_cv5"
                                android:padding="15dp"
                                android:text="How is it transmited?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv6_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv6"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/vaccine_kit"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="15dp"
                                android:text="Is thier any vaccine or treatment?"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv7_tips"
                        android:layout_width="150dp"
                        android:layout_height="250dp"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="25dp"
                        android:background="@drawable/greycircle">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_cv7"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_margin="20dp"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/plan"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/txt_cv7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="15dp"
                                android:text="Information for travellers"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tipsactive"
                        android:layout_width="105dp"
                        android:layout_height="106dp"
                        android:layout_row="0"

                        android:gravity="center"
                        android:text="Tips"
                        android:textColor="#ffffff"
                        android:textSize="30sp"
                        android:textStyle="bold" />


                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>







    <!--tab bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00bbff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/homeinactive"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="#666666"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/homeactive"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"

                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tipsinactive"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tips"
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/profilebutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/greycircle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>